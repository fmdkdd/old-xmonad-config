Config { font = "xft:Ubuntu:size=11"
       , bgColor = "#333333"
       , fgColor = "grey"
       , position = TopW L 85
       , lowerOnStart = True
       , commands = [ Run Date "%a %b %_d %Y %H:%M" "date" 600
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%}{<fc=#dfaf8f>%date%</fc>"
       }
